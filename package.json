{
  "name": "carna",
  "version": "1.4.17",
  "description": "Global management of the config files",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "npm run build:type && npm run build:babel",
    "build:type": "tsc --outDir ./build --project ./tsconfig.build.json --noEmit false --emitDeclarationOnly",
    "build:babel": "babel -d build --extensions .ts,.tsx --ignore 'src/**/*.test.ts','src/**/*.test.tsx' src",
    "prebuild": "rm -rf ./build",
    "snapshot": "npm run snapshot:app && npm run snapshot:cli && npm run snapshot:lib",
    "snapshot:app": "./tests/.snapshots/create.sh app",
    "snapshot:cli": "./tests/.snapshots/create.sh cli",
    "snapshot:lib": "./tests/.snapshots/create.sh lib",
    "presnapshot": "npm run build:babel",
    "test": "jest --selectProjects unit",
    "test:watch": "npm run test -- --watch",
    "test:integration": "jest --selectProjects integration",
    "test:integration:watch": "npm run test:integration -- --watch",
    "lint": "node ./build/bin/index.js lint --vvv",
    "prelint": "npm run build:babel"
  },
  "keywords": [],
  "author": "Kjell Die√üel <development@kettil.de>",
  "license": "MIT",
  "engines": {
    "node": ">= 12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kettil/carna"
  },
  "bugs": {
    "url": "https://github.com/kettil/carna/issues/new"
  },
  "bin": {
    "carna": "build/bin/index.js"
  },
  "dependencies": {
    "@kettil/commitlint-config": "^1.0.1",
    "@kettil/eslint-config": "^1.9.10",
    "@kettil/semantic-release-config": "^1.2.4",
    "@kettil/tool-lib": "^2.9.0",
    "@types/figlet": "^1.2.1",
    "@types/yargs": "^16.0.0",
    "chalk": "^4.1.0",
    "commitlint": "^12.0.1",
    "depcheck": "^1.4.0",
    "eslint": "^7.22.0",
    "figlet": "^1.5.0",
    "ora": "^5.4.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.19",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint-plugin-jest": "^24.3.2",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "typescript": "^4.2.3"
  }
}
