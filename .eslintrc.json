{
  "extends": "@kettil",

  "rules": {
    "unicorn/no-array-push-push": ["off"]
  },

  "overrides": [
    {
      "files": ["src/lib/commands/*.ts"],
      "rules": { "import/no-unused-modules": ["off"] }
    },
    {
      "files": ["src/lib/tasks/*.ts"],
      "rules": { "@typescript-eslint/ban-types": ["off"] }
    },
    {
      "files": ["templates/**/*.js", "templates/src/bin/*"],
      "rules": {
        "import/no-unused-modules": ["off"],
        "import/no-unresolved": ["off"],
        "node/shebang": ["off"],
        "node/no-missing-require": ["off"],
        "node/no-unpublished-require": ["off"]
      }
    },
    {
      "files": ["tests/.snapshots/*/*.config.js", "tests/.snapshots/*/src/bin/*.ts"],
      "rules": {
        "import/no-unresolved": "off",
        "node/no-missing-require": "off",
        "node/shebang": "off"
      }
    },
    {
      "files": [
        "tests/.snapshots/*/tests/*/pre.ts",
        "tests/.snapshots/*/tests/*/post.ts",
        "tests/.snapshots/*/tests/*/pre.js",
        "tests/.snapshots/*/tests/*/post.js"
      ],
      "rules": { "import/no-unused-modules": ["off"], "@typescript-eslint/no-floating-promises": ["off"] }
    },
    {
      "files": ["tests/**/*.test.ts", "tests/**/*.test.tsx"],
      "rules": {
        "@typescript-eslint/no-explicit-any": ["off"],
        "node/global-require": ["off"]
      }
    },
    {
      "files": ["tests/shared/__mock__/*.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": ["off"],
        "@typescript-eslint/no-unused-vars": ["off"],
        "@typescript-eslint/require-await": ["off"],
        "import/no-unused-modules": ["off"],
        "import/no-anonymous-default-export": ["off"],
        "import/prefer-default-export": ["off"],
        "jest/no-standalone-expect": ["off"]
      }
    }
  ]
}
