{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },

  "prettier.configPath": "./configs/prettierrc.json",

  "eslint.enable": true,
  "eslint.validate": ["javascript", "typescript"],
  "eslint.options": {
    "overrideConfigFile": "./.eslintrc.json",
    "configFile": "./.eslintrc.json"
  },

  "vsicons.associations.files": [
    { "icon": "jest", "extensions": ["jest.ci.js"], "filename": true, "format": "svg" },
    { "icon": "typescript", "extensions": ["tsconfig.build.json"], "filename": true, "format": "svg" }
  ],

  "vsicons.associations.folders": [
    { "icon": "test", "extensions": ["type", "unit", "integration", "e2e"], "format": "svg" },
    { "icon": "helper", "extensions": ["shared"], "format": "svg" }
  ]
}
